#sidebar {
  background-color: black;
  background-position: left bottom;
  background-repeat: no-repeat;
  background-size: contain;
  padding: 0;
  margin: 0;
}

@media (min-width: 767px) {
  #sidebar {
    background-image: url(<%= asset_path('sidebar/skull.jpg') %>);
  }
}

.sidebar-nav ul li {
  margin-top: 0.6em;
  margin-bottom: 0.6em;
}

.sidebar-nav ul li a {
  background: none ! important;
  color: red;
  text-shadow: none;
  text-align: center;
  font-weight: bold;
}
.sidebar-nav ul li.active a, .sidebar-nav ul li.active a:hover, .sidebar-nav ul li a:hover {
  color: white ! important;
  text-shadow: none;
}
.sidebar-nav ul li.disabled a, .sidebar-nav ul li.disabled a:hover {
  color: #330000;
}

.sidebar-nav ul ul {
  padding-bottom: 1em;
  list-style-type: none;
  text-align: center;
  margin: 0 auto;
}

.sidebar-nav ul ul li a {
  color: white;
}
