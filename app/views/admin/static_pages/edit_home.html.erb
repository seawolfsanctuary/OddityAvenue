<h2><%= I18n.t('admin.page_titles.home') -%></h2>
<% if flash[:errors] %>
  <div class><%= flash[:error] %></div>
<% end %>
<% if flash[:info] %>
  <div class="info"><%= flash[:info] %></div>
<% end %>
<%= form_tag admin_content_home_path do %>
  <%= text_area_tag :content, @body_text, { class: "tinymce span11", rows: 20 } %>
  <%= submit_tag "Save", class: "span3" %>
<% end %>
