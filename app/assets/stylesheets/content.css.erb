@media (max-width: 767px) {
  .content {
    padding-top: 2em;
  }
}
@media (min-width: 767px) {
  .content {
    padding-left: 5%;
  }
}

div#form_info p, div#form_errors p, div.info, div.error {
  border: solid 1px white;
  color: white;
  width: auto;
}
div#form_info p, div.info {
  border-color: palegreen;
  color: palegreen ! important;
}
div#form_errors p, div.error {
  border-color: red;
  color: red ! important;
}

input.button {
  text-align: right;
}

div.error, div.info {
  padding: 0.5em;
  margin-bottom: 1em;
}

div#error_explanation h2 {
  font-variant: inherit;
  font-size: 100%;
}

input[type="checkbox"] {
  float: left;
  margin-right: 1em;
}
