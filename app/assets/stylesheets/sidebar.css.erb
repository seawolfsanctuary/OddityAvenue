.sidebar-nav {
  background-image: url(<%= asset_path('sidebar/skull.png') %>);
  background-position: bottom-middle;
  background-repeat: none;
  border: none;
}

.sidebar-nav ul li {
  padding-top: 0.3em;
  padding-bottom: 0.3em;
}
.sidebar-nav ul li a {
  border: 1px solid white;
  background-color: red;
  color: white;
  text-shadow: none;
  text-align: center;
}
.sidebar-nav ul li.active a, .sidebar-nav ul li.active a:hover, .sidebar-nav ul li a:hover {
  border: 1px solid red;
  background: white;
  color: red ! important;
  text-shadow: none;
}
.sidebar-nav ul li.disabled a, .sidebar-nav ul li.disabled a:hover {
  background: red;
  color: black;
}
