body {
  padding-top: 0;
  padding-bottom: 0;
  background: #770000;
  background: -webkit-radial-gradient(top center, #990000, #660000, #220000);
  background:    -moz-radial-gradient(top center, #990000, #660000, #220000);
  background:     -ms-radial-gradient(top center, #990000, #660000, #220000);
  background:      -o-radial-gradient(top center, #990000, #660000, #220000);
  background:         radial-gradient(top center, #990000, #660000, #220000);
  color: white;
}

hr {
  color: grey;
  border-color: grey;
  background-color: grey;
}

@media (max-width: 767px) {
  img { max-width: 90%; }
}
@media (min-width: 767px) {
  img { max-width: 100%; }

  body {
    /* background-image: url(<%= asset_path('background.jpg') %>); */
    background-repeat: repeat-both;
    background-position: center;
  }
}
