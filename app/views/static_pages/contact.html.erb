<%= raw(@body_text) -%>

<%= form_tag make_contact_path do -%>
  <%= label_tag :name -%>
  <%= text_field_tag :name, "", placeholder:  "John Smith" -%>

  <%= label_tag :subject -%>
  <%= text_field_tag :subject, "", placeholder: "Items for Sale" -%>

  <%= label_tag :email -%>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-envelope"></i></span>
    <%= text_field_tag :email, "", placeholder: "you@example.com", class: "span12" -%>
  </div>

  <%= label_tag :message -%>
  <%= text_area_tag :message, "", rows: 10 -%>

  <br />

  <%= submit_tag :Send, :class => "btn btn-primary" -%>
<%- end -%>
