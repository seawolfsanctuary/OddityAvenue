#header {
  background-image: url(<%= asset_path('header/background.png') %>);
  background-size: cover;
  background-position: center center;
  margin-top:       0;
  margin-right: -19px;
  margin-left:  -19px;
  margin-bottom:  1em;
  padding:      1em 0;
  border-bottom: solid black 5px;
}

#logo {
  height: 125px;
  background-image: url(<%= asset_path('header/logo.png') %>);
  background-repeat: no-repeat;
  background-position: center;
}
#sublogo {
  height: 125px;
  background-image: url(<%= asset_path('header/logo_right.png') %>);
  background-repeat: no-repeat;
  background-position: right;
}

h1, h2, h3, h4, h5, h6, .sidebar-nav ul li a {
  font-variant: small-caps;
}
